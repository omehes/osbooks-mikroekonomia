  <glossary id="UUID9ed04fbd-8eae-4782-66bf-5844b2e369f4">
    <definition id="fs-idp36306160">
      <term id="UUID38642f6e-65ff-41ef-7355-a6f52474b3d1">mieszana elastyczność cenowa popytu (ang. <foreign xml:lang="en" id="UUID82c35d80-158d-496f-4804-d1efda95204d">cross-price elasticity of demand</foreign>)</term>
      <meaning id="fs-idp1493216">
        <para id="UUID007d1f29-411a-48d2-612b-e43900d3e390">miara względnej zmiany popytu na dobro A w wyniku względnej zmiany ceny dobra B</para>
      </meaning>
    </definition>
    <definition id="UUID93ae0c37-e7dd-4e73-5182-24b12fe867b6">
      <term id="UUIDe393b160-2c99-441c-6b30-1db9dcaf70f9">krzyżowa elastyczność cenowa popytu (ang. <foreign xml:lang="en" id="UUID4bb46b29-ccd7-4ad7-68ec-9e5494a5c54c">cross-price elasticity of demand</foreign>)</term>
      <meaning id="UUID83a678bc-085f-4182-5273-2b8edcaedc1c">
        <para id="UUID4904b816-918d-48e7-4a09-ff270b287229">patrz: mieszana elastyczność cenowa popytu</para>
      </meaning>
    </definition>
    <definition id="fs-idp14346144">
      <term id="UUIDbe92a5d5-06dd-4454-5bf5-7b5edfeae1aa">elastyczność oszczędności (ang. <foreign xml:lang="en" id="UUID829244a8-0a83-4a40-764d-442170a0db7f">elasticity of savings</foreign>)</term>
      <meaning id="fs-idm1516592">
        <para id="UUID47b37c69-887a-4b1e-46bf-a468e4ecb81b">względna zmiana wielkości oszczędności podzielona przez względną zmianę stopy procentowej</para>
