      <meaning id="UUID3dd5e0c0-8cd8-429c-65b9-c8ac4220fd7b">
        <para id="UUIDdbbc314a-7449-4e80-7314-2ce6c7561a5f">patrz: struktura rynku</para>
      </meaning>
    </definition>
    <definition id="UUIDe4257b0a-ed9c-4314-47a0-f784482aefae">
      <term id="UUID6c529b06-c0a5-49f6-45f8-9d3c6560f536">struktura konkurencji (ang. <foreign xml:lang="en" id="UUID2731d000-7de3-4b2d-53b0-7523ca67e7d2">market structure</foreign>)</term>
      <meaning id="UUID05150a1e-49c7-4160-5e68-31584fa33bed">
